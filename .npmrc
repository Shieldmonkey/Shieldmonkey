# npm Security Configuration

# Prevent packages from running arbitrary scripts during install.
# This is a major vector for supply chain attacks.
# If a package needs a build step, run it manually or use a vetted workaround.
ignore-scripts=true

# Always run security audits during installation.
audit=true

# Enforce Node.js/npm versions specified in package.json engines.
engine-strict=true

# Ensure lockfile is updated correctly and matches the state.
package-lock=true
