# Common Security Configuration

# Prevent packages from running arbitrary scripts during install.
# If a package needs a build step, specify it in pnpm-workspace.yaml or run manually.
ignore-scripts=true

# Always run security audits during installation.
audit=true

# Enforce Node.js/npm versions specified in package.json engines.
engine-strict=true

# Ensure lockfile is updated correctly.
package-lock=true
lockfile=true

# pnpm specific security settings (kept here for broader tool compatibility if needed)
block-exotic-subdeps=true
minimum-release-age=10080
trust-policy=no-downgrade
