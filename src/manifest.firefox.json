{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_appName__",
  "version": "0.1.0",
  "description": "__MSG_appDescription__",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "scripting",
    "webNavigation",
    "contextMenus",
    "downloads",
    "declarativeNetRequest",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "src/rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["src/background/index.ts"],
    "type": "module"
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self'; object-src 'none'; style-src 'unsafe-inline'; img-src 'self' data:; default-src 'none'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "shieldmonkey@toshs.dev",
      "strict_min_version": "120.0"
    }
  },
  "optional_permissions": [
    "userScripts"
  ]
}
