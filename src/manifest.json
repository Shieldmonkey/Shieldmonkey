{
  "manifest_version": 3,
  "name": "Shieldmonkey",
  "version": "0.1.0",
  "description": "A Userscript manager for the modern web.",
  "permissions": [
    "storage",
    "userScripts",
    "tabs",
    "activeTab",
    "notifications",
    "scripting",
    "webNavigation",
    "contextMenus",
    "declarativeNetRequest",
    "webRequest",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "src/rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; connect-src 'self'"
  }
}
