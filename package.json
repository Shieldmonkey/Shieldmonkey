{
  "name": "shieldmonkey",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--max-old-space-size=4096\" vite build --watch --mode development",
    "dev:firefox": "TARGET_BROWSER=firefox NODE_OPTIONS=\"--max-old-space-size=4096\" vite build --watch --mode development",
    "build": "tsc -b && NODE_OPTIONS=\"--max-old-space-size=4096\" vite build && rm -rf dist/.vite",
    "build:firefox": "tsc -b && TARGET_BROWSER=firefox NODE_OPTIONS=\"--max-old-space-size=4096\" vite build && rm -rf dist-firefox/.vite",
    "lint": "eslint .",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "bump-version": "node scripts/bump-version.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@codemirror/autocomplete": "6.20.0",
    "@codemirror/commands": "6.10.1",
    "@codemirror/lang-javascript": "6.2.4",
    "@codemirror/language": "6.12.1",
    "@codemirror/view": "6.39.12",
    "@uiw/codemirror-theme-vscode": "4.25.4",
    "@uiw/react-codemirror": "4.25.4",
    "idb": "8.0.3",
    "lucide-react": "0.562.0",
    "prettier": "3.8.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router-dom": "7.13.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.3.0",
    "@eslint/js": "9.39.2",
    "@types/chrome": "0.1.35",
    "@types/node": "24.10.9",
    "@types/react": "19.2.9",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "eslint": "9.39.2",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.4.26",
    "globals": "16.5.0",
    "playwright": "1.57.0",
    "publish-browser-extension": "3.0.0",
    "sass": "1.97.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.1",
    "vite": "7.3.1",
    "vitest": "4.0.17"
  }
}
